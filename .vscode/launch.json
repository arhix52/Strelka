    "version": "0.2.0",
    "configurations": [ 
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            // "args": ["-s", "C:/work/basicCurves1.usda"],
            // "args": ["-s", "C:/work/blender_hair/einar_hair.usd"],
            // "args": ["-s", "C:/work/cube.usda"],
            // "args": ["-s", "C:/work/senna2.usd"],
            // "args": ["-s", "C:/work/mustang2.usda"],
            "args": ["-s", "C:/work/Kitchen_set/Kitchen.usda"],
            // "args": ["-s", "C:/work/alab-v2.0.1/ALab/entry.usda"],
            // "args": ["-s", "C:/work/strelka_test1.usda"],
            "environment": [
                {
                    "name": "SPDLOG_LEVEL",
                    "value": "info"
                }
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/",
            "console": "externalTerminal"
        },
        {
                "name": "(Linux) Launch",
                "type": "cppdbg",
                "request": "launch",
                "program": "${command:cmake.launchTargetPath}",
                "args": ["-s", "~/work/cube.usda"],
                // "args": ["-s", "~/work/Kitchen_set/Kitchen2.usda"],
                // "args": ["-s", "~/work/alab-v2.0.1/ALab/entry.usda"],
                "stopAtEntry": false,
                "cwd": "${workspaceFolder}/build/Debug",
                "environment": [
                    {
                        "name": "SPDLOG_LEVEL",
                        "value": "warn"
                    }
                ],
                "externalConsole": false,
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    },
                    {
                        "description": "Set Disassembly Flavor to Intel",
                        "text": "-gdb-set disassembly-flavor intel",
                        "ignoreFailures": true
                    }
                ]
        },
        {
            "name": "(Mac) Launch",
            "type": "cppdbg",
            "request": "launch",
            "targetArchitecture": "arm64",
            "program": "${command:cmake.launchTargetPath}",
            // "args": ["-s", "../../cube.usda"],
            // "args": ["-s", "../../senna2.usd"],
            "args": ["-s", "../../../Kitchen_set/Kitchen.usda"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Debug/",
            "environment": [
                {
                    "name": "MTL_DEBUG_LAYER",
                    "value": "1"                    
                },
                {
                    "name": "OBJC_DEBUG_MISSING_POOLS",
                    "value": "YES"
                }
            ],
            "MIMode": "lldb"
            // "console": "externalTerminal"
        },
        {
        "name": "(Windows) Test Launch",
        "type": "cppvsdbg",
        "request": "launch",
        "program": "${command:cmake.launchTargetPath}",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/build/",
        // "cwd": "${command:cmake.launchTargetDirectory}",
        // "environment": [
        //     {
        //         "name": "PATH",
        //         "value": "$PATH:${command:cmake.launchTargetDirectory}"
        //     }
